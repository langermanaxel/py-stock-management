# 🔒 Variables de Entorno - Configuración del Sistema de Gestión de Inventario
# Copiar este archivo como .env y completar con valores reales

# 🗄️ Base de Datos
# Para SQLite (desarrollo)
DATABASE_URL=sqlite:///instance/stock_management.db

# Para PostgreSQL (producción)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/stock_management

# Para MySQL (alternativa)
# DATABASE_URL=mysql://usuario:password@localhost:3306/stock_management

# 🌐 Configuración Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=tu-clave-secreta-super-segura-aqui

# 🚀 Configuración del Servidor
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# 🔧 Configuración SQLAlchemy
SQLALCHEMY_TRACK_MODIFICATIONS=False

# 📧 Configuración de Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion

# 🔐 JWT/Autenticación (para futuras implementaciones)
JWT_SECRET_KEY=otra-clave-jwt-super-secreta

# 📊 Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 🌍 Configuración de Producción
# Cambiar a False en producción
DEBUG=True

# 📝 Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5000

# ⚡ Configuración de Cache (Redis - opcional)
# REDIS_URL=redis://localhost:6379/0

# 📈 Configuración de Monitoreo (opcional)
# SENTRY_DSN=https://tu-dsn-de-sentry.sentry.io/proyecto
